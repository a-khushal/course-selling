generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id    String  @id @default(uuid())
  email String  @unique
  password  String 
  name    String?
  courses   CourseOfUser[]
}

model Course{
  id  String  @id @default(uuid())
  title String 
  description String
  users CourseOfUser[]
}

model CourseOfUser{
  user  User @relation(fields: [userId], references: [id])
  userId  String
  course  Course @relation(fields: [courseId], references: [id])
  courseId  String
  @@id([userId, courseId])
}